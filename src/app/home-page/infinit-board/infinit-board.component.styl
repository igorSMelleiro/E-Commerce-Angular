.infinit-board-container{
    min-width: 1040px;
    max-width: 1440px;
    display: flex;
    flex-direction: column;
    .board-header{
        padding-left: 34px;
        padding-right: 34px;
        .header-title{
            font-weight: 500;
        }

    }
    .infinit-list-container{

        min-width: 1040px;
        max-width: 1440px;
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(240px,20%))
        grid-template-rows: repeat(auto-fill,minmax(300px,100%)) ;
        grid-row-gap: 24px;
        align-items: center;
        justify-items: center;

        width: 100%;
        height 100%;

            
        .infinit-list-item{
            max-width: 230px;
            // white-space: nowrap;
            
        }
    }   
}
