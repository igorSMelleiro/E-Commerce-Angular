.login-container{
    display: inline-block;
    max-width: 800px;
    width: 400px;
    margin: 0 auto;
    border-radius: 1px;
    background-color: white;
    box-shadow: 0px 0px 4px #999;
    padding: 24px 24px 24px 24px;
    
    mat-tab-group > * {
        flex:1;
       
    }
    .logo-container{
         height: 200px;
            width: auto;
        max-height: 200px;
        max-width: auto;
        .logo-img{
             height: 200px;
            width: auto;
            max-height: 200px;
            max-width: auto;
        }
    }
    .social-autenticators > *{
        border-radius: 2px;
        width: 200px ;
        margin-bottom: 16px;

    }
    .social-autenticators{
        display: flex;
        flex-direction: column; 
        align-items: center;
        width: 100%;

    }
    .login-form {
        display: flex;
        flex-direction: column; 
        align-items: center;
    
    }
    .register-form{
        display: flex;
        flex-direction:column;
        align-items: center;

    }
}
