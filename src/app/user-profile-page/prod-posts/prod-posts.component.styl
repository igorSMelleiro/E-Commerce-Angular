.container{
    position: relative
    width: 100%;
    min-height: 200px ;
    height auto;
    background-color: white;
    display: flex;
    flex-direction: column;

    
}

.item-layout{
    display: flex;
    flex-direction: row;
    height: 220px;
    overflow:hidden;
    margin: 8px;
    border-radius: 2px;
    box-shadow: 0 0 1px 1px #eee;
}
.image-wraper{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 200px;
    width: 250px;

}
.prod-image{

    min-width: 150px;
    min-height: 150px;    
    max-width: 150px;
    max-height: 150px; 
}
.general-prod-info > * {
    margin: 8px 0 8px 0;
    font-size: 14px;

}
.general-prod-info{
    flex: 1;
}

.prod-actions > * {

}
.prod-actions{
    flex: 0.4;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
}

.edit-btn{
    background-color: rgb(255,120,40);
    color: white;
}

.edit-forms-wraper{
    display: flex;
    flex-direction: row;
    margin: 8px;
}
.prod-forms-wraper > *{
    flex: 1 ;
}
.prod-edit-form{
    display: flex;
    flex-direction: column;
}
.address-edit-form{
    display: flex;
    flex-direction: column;
}