@import '../../../fonts-mixins-patterns.stylus'
profile_img_size = 100px;
icon_margin_left = 24px;
.sidenav-container{
    position: relative;
    display: flex
    flex-direction: column;
    min-width: 100%;
    min-height: 100%;
    max-width: 280px;
    background-image: linear-gradient(to bottom , rgba(255,80,20,0.8) 45%, rgba(255,80,0,1));
    overflow: hidden;

    .usr-profile-info{
        display: flex;
        flex-direction: column;
        align-content: center;
        min-width: 100%; 
        max-width: 100%;
        width: 280px;
        height: auto;   
        min-height: 280px; 
        
        //border-bottom: 1px solid #ddd
        .usr-profile-pic{
            position relative;
            width: 280px;
            min-height:280px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            
            
            
            .store-pic{
                position relative;
                display: inline-block;
                width: 140px;
                height 140px;
                
                .pic{
                    margin: auto auto;
                    width: auto;
                    height auto;
                    max-width: 140px;
                    max-height: 140px;
                    border-style: none;
                    border-radius: 100px;
                    z-index: 4;
                }
                span{
                    position: absolute;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: flex-end;
                    cursor: pointer;
                    top:-8px;
                    left: -8px;
                    padding: 8px;
                    position: absolute;
                    width: 140px;
                    height 140px;
                    opacity: 0;
                    border-style: none;
                    border-radius: 100px;
                    pointer-events: none;
                    
                    overflow hidden
                    z-index: 1;
                    mat-icon {
                        margin-bottom: 12px;
                    }
                }
                .change-pic-input{
                    top:0;
                    left: 0;
                    position: absolute;
                    width: 140px;
                    height 140px; 
                    opacity: 0;
                    
                    box-sizing: border-box;
                    cursor: pointer;
                    z-index: 5;
                }
                &:hover span {
                    
                    opacity:0.4;
                    background-color: white;;
                    z-index: 3;
                }
            }
        }
        .usr-profile-status > * {
            margin: icon_margin_left + 35px;
        }
        .usr-profile-status{
            margin-top: 8px;
            margin-bottom: 8px;
            .usr-profile-name{
                margin-top: 0;
                margin-bottom: 8px;
                normal-enfasis();
                 color: white;
            }
            .usr-profile-email{
                margin-top: 0;
                margin-bottom: 8px;
                low-enfasis(13px);
                 color: white;
            }
        }
        
    }
   
    .sidenav-account-info{
        position: relative;
        margin: 0;
        padding:0;
        min-width: 100%;
        min-height: 180px;
        //background-color: white;
        
        .account-info-list {
            display: flex;
            flex-direction: column;
            list-style: none;
            margin:0;
            padding: 0;

            .account-list-item{
                display:flex;
                flex-direction: row;
                align-items: center;
                min-height: 45px;
                height 45px;
                margin:0;
                padding: 0;
                hover-background(){
                    background-color : rgba(255,120,80,0.6);

                }
                .item-link{
                    display:inline-flex;
                    width: 100%;
                    height: 100%;
                    
                    normal-enfasis();
                    color: white;
                    text-decoration: none;
                    align-items: center;
                    .item-icon{
                        margin-top: auto;
                        margin-bottom: auto;
                        margin-left: icon_margin_left;
                        margin-right: 12px;
                        
                    }
                    &:hover{
                        background-item-hover()
                        hover-background()
                    }
                    &:focus{
                        normal-enfasis-hover();
                        background-item-hover();  
                        hover-background();
                        color:white;
                    }
                }
                &:hover{
                    background-item-hover()
                    hover-background()
                }
            }
        }   
    }
}
