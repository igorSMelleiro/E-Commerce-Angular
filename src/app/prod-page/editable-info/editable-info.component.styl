.editable-info-container{
    display: flex;
    flex-direction: column;
    background-color: rgb(240,240,240);
    border: 1px solid rgb(220,220,220);
    border-radius: 4px;
    padding: 24px 12px 24px 12px;


    .fields-container{
        display:flex;
        flex-direction: column;

        .prod-field > * {
            margin: 0 8px 0 0 ;
        }
        
        .prod-field{
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            margin: 0 0 8px 0;
        
            .mat-prod-fiel{
                margin: 0 8px 0 0;
                .prod-inputs{
                
                max-width: 98px;
                }
            }    
        }
        .field-color > * {
            margin:  0 8px 0 0 ;
        }
        .field-color{
            background-color: rgb(245,245,245);
            border: 1px solid rgb(220,220,220);
            border-radius: 2posso 
            //set behavior of all fields inside the tag below
            .field-color-control > * {
                margin: auto 8px ;
            }
            .field-color-control{
                
                display: flex;
                flex-direction: row;
                align-content: center;
                margin: 0 ;
                padding: 0 ;
                background-color: white;
                width: 100%;
                min-height: 60px;
                box-shadow: 1px 2px 8px rgba(200,200,200,0.6);
                
                .btn-save-color{

                   
                   margin-left: auto;
                }

            }
            .scrollable-colors{
                width: 100%;
                height: 300px;
                //seta margin-right em todos os itens dentro de color-item
                .color-item > * {
                    margin: 0 8px 0 0;
                }
                .color-item{
                    display:flex;
                    flex-direction: row;
                    align-items: center;
                    border-bottom: 1px solid rgb(220,220,220);
                    padding: 8px 8px 8px 8px;
                    margin: 0px 0 0px 0;
                    width: auto;
                    height 100px;
                    max-height: 100px;
                    .btn-remove-item{
                        text-align: center;
                        .remove-icon{
                            color:rgba(255,100,100,0.2);
                        }
                    }
                    .img-holder{
                        max-height: 80px;
                        max-width: 80px;
                    }
                    .stock-info > * {
                        margin: 0 auto;    
                    }
                    .stock-info{
                        margin: auto 0;
                        display: flex;
                        flex-direction: row;
                        align-items: center;
                        //background-color: yellow;
                        width: 100%;
                        .color-stock{
                            height: 100%;
                        }
                    }
                    &:hover{
                            
                        .btn-remove-item{
                            text-align: center;
                            .remove-icon{
                                color:rgba(255,100,100,1);
                            }
                        }
                    }
                } 
            }
        }
    }
}