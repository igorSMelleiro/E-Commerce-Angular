.prod-img-container{
        
        width: 100%;
        height auto;
        display: grid;
        top: 0;
        position: sticky;
        background-color: white;
        grid-template-columns: 500px;
        grid-template-rows: 500px fit-content(200px);
        .prod-img-list{
            position: relative;
            width: 100%;
            height 100%;
            margin: 0;
            padding: 0;
            //justify-self: end;
            align-self: flex-end;
            background-color: white;;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 1;
            grid-row-end: 2;
            list-style: none;
            overflow: hidden;
            z-index: 1;
            .prod-img-list-item{
                position: absolute;
                display: flex;
                align-items:center;
                justify-content:center;
                width: 100%;
                height: 100%;
                border: 1px
                .prod-img{
                    display: flex;
                    align-content: center;
                    justify-content: center;
                    background-color: lightyellow;
                    min-width: 80px;
                    min-height: 80px;
                    width: auto;
                    height: auto;
                    max-width: 100%;
                    max-height: 100%;
                }
            }    
        }
        &:hover{
            .next-img-btn{
                visibility: visible;
            }
            .previous-img-btn{
                visibility: visible;
            } 
        }
        img_size = 50px;
        .prod-gal-img{
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 2;
            grid-row-end: 3;
            margin: 0;
            padding: 0;
            height: auto;
            max-width: 500px;
            //max-height: 100px;
            list-style: none;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            overflow-x: hidden;
            //overflow-y: hidden;
            
            .prod-gal-item{
                margin:0 8px 8px 8px;
                padding: 0;
                cursor: pointer;
                min-height:img_size;
                min-width: img_size;
                border: 1px solid #dddddd
                border-radius: 2px;
                display: inline-block;
                max-height:img_size;
                max-width: img_size;
                .gal-img{
                    display: inline-block;
                    background-color: lightgreen;
                    min-height:img_size;
                    min-width: img_size;
                    width: auto;
                    height: auto;
                    max-height:img_size;
                    max-width: img_size;
                }
                &:hover{
                    border: 1px solid #F50
                    border-radius: 2px;
                }
            }
        }

        .previous-img-btn{
            height: 60px;
            width: 60px;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 1;
            grid-row-end: 2;
            background-color: rgba(255,255,255,0);
            border-style: none;
            justify-self: start;
            align-self: center;
            visibility: hidden;
            outline: none;
            border-radius: 2px;
            z-index: 2;
            &:hover{
            background-color: rgba(200,200,200,0.1); 
            }
            &:active{
                background-color: rgba(200,200,200,0.6); 
            }
            
        }
        .next-img-btn{
            height: 60px;
            width: 60px;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 1;
            grid-row-end: 2;
            background-color: rgba(255,255,255,0);
            border-style: none;
            justify-self: end;
            align-self: center;
            visibility: hidden;
            outline: none;
            border-radius: 4px;
            z-index: 2;
            &:hover{
                background-color: rgba(200,200,200,0.1); 
            }
            &:active{
                background-color: rgba(200,200,200,0.6); 
            }
        }
        .previous-list{
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 2;
            grid-row-end: 3;
            border-style: none;
            border: 0;
            outline: none;
            background-color: rgba(255,255,255,0);
            justify-self: start;
            z-index: 2;
            &:hover{
                background-color: rgba(200,200,200,0.1); 
            }
            &:active{
                background-color: rgba(200,200,200,0.6); 
            }
        }
        .next-list{
            z-index: 2;
            background-color: rgba(255,255,255,0);
            justify-self: end;
            border-style: none;
            border: 0;
            outline: none;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 2;
            grid-row-end: 3;
            &:hover{
                background-color: rgba(200,200,200,0.1); 
            }
            &:active{
                background-color: rgba(200,200,200,0.6); 
            }
        }
    }